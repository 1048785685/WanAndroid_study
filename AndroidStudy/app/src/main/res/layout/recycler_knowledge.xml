<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/knowledge_image"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_toright"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/knowledge_image">
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/knowledge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开发环境"
                android:textSize="16sp"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/knowledge_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Android Studio相关   gradle  官方发布"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>